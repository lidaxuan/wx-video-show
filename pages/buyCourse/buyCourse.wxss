/* pages/buyCourse/buyCourse.wxss */

/* ------ 课程信息 ---------------------------------------------- */

.courseInfo {
    padding: 40rpx 0;
    margin-left: 24rpx;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.courseInfo .courseCover {
    flex: none;
    width: 256rpx;
    height: 147rpx;
    border-radius: 18rpx;
    object-fit: cover;
}

.right {
    flex: auto;
    margin-left: 30rpx;
}

.courseInfo .coursenum {
    font-size: 24rpx;
    color: rgba(153, 153, 153, 1);
    margin-bottom: 4rpx;
    font-weight: 600;
}

.courseInfo .courseTitle {
    height: 92rpx;
    width: auto;
    font-size: 34rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    flex-direction: column;
    font-weight: 600;
}

/* ------ 课程信息 ---------------------------------------------- */

/* ------ 课程价格 ---------------------------------------------- */

.coursePrice {
    font-size: 28rpx;
    color: rgba(102, 102, 102, 1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 40rpx 0;
    padding: 0 24rpx;
}

.line {
    height: 16rpx;
    background-color: #f7f7f7;
}

/* ------ 课程价格 ---------------------------------------------- */

/* ------ 支付方式 ---------------------------------------------- */

.moneyPayBox .paytype, .coupon {
    height: 110rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #eee;
    margin-left: 30rpx;
    padding-right: 30rpx;
}

.moneyPayBox .paytype {
    border: none;
}

.moneyPayBox text {
    font-size: 28rpx;
}

.moneyPayBox .icon {
    width: 42rpx;
    height: 42rpx;
    margin-right: 34rpx;
}

.leftBox {
    display: flex;
    align-items: center;
    flex: 1;
    color: #999;
}

.check {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    border-radius: 20rpx;
    background-size: contain;
    border: 1rpx solid #ccc;
}

.active {
    width: 42rpx;
    height: 42rpx;
}

.couponMoney {
    display: flex;
    align-items: center;
}

.couponMoney text {
    color: #999;
}

.couponMoney .couponrightBackimg {
    width: 40rpx;
    height: 40rpx;
}

.couponMoney .useCoupon {
    color: #eb4655;
}

/* ------ 支付方式 ---------------------------------------------- */

/* ------ 协议 ---------------------------------------------- */

.agreement {
    display: flex;
    align-items: center;
    justify-content: space-between;
    /* flex-direction: column; */
    padding: 30rpx;
    color: #666;
}

.agreement .agreementContent {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.agreement .agreementContent text:first-child {
    margin-bottom: 5rpx;
    font-size: 28rpx;
}

.agreement .agreementContent text:last-child {
    font-size: 26rpx;
}

.agreement .check {
    display: inline-block;
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
    background-size: contain;
    border: 1rpx solid #ccc;
}

.agreement .active {
    width: 30rpx;
    height: 30rpx;
}

/* ------ 协议 ---------------------------------------------- */

/* ------ 购买----------------------------------------------- */

.pay_btn_box {
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    justify-content: space-between;
    width: 100%;
    background-color: rgb(255, 255, 255);
    border-top: 1rpx solid #eee;
    /* margin-bottom: 30rpx; */
}

.pay_btn_box .leftBox {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    width: calc(100% - 300rpx);
    color: #eb4654;
}

.pay_btn_box .pay_btn {
    width: 300rpx;
    height: 110rpx;
    line-height: 110rpx;
    text-align: center;
    background-color: #eb4655;
    color: #fff;
    border-radius: 0rem;
    font-size: 34rpx;
}

.original {
    font-size: 24rpx;
    color: #666;
    margin-top: 8rpx;
}

/* ------ 购买----------------------------------------------- */

/* ---- 顶部下拉框 -------------------------------------------------- */

.downBox {
    position: fixed;
    top: 100%;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgb(0, 0, 0, 0.3);
    z-index: 20;
    transition: all 0.3s ease-in;
    overflow: hidden;
    box-sizing: border-box;
}

.show {
    top: 0;
}

.downBox .downBoxListBox {
    position: absolute;
    left: 0;
    bottom: 0;
    height: 976rpx;
    width: 100%;
    padding-top: 88rpx;
    box-sizing: border-box;
    background: #fff;
}

.downBox .downBoxListBox .title {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 34rpx;
    color: #222;
    background: #fff;
    border-bottom: 1rpx solid #eee;
}

.downBox .downBoxListBox .noselect {
    width: 100%;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
    padding: 0 44rpx 0 30rpx;
    box-sizing: border-box;
    margin-bottom: 10rpx;
    color: #666;
}

.downBox  .listbox {
    overflow-y: scroll;
}

.haveDataLCouponList {
    padding: 0 20rpx 0 26rpx;
    box-sizing: border-box;
}

.downBox .downBoxListBox .couponItem {
    display: flex;
    width: 100%;
    height: 200rpx;
    margin-bottom: 20rpx;
    background-color: #f9f9f9;
    box-sizing: border-box;
}

.downBox .downBoxListBox .couponItem .couponItemLeft {
    flex: none;
    width: 190rpx;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 20rpx;
    color: #fdfdff;
    position: relative;
}

.downBox .downBoxListBox .couponItem .couponItemLeftimg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.zIndex {
    z-index: 2;
}
.downBox .downBoxListBox .couponItem .couponItemLeft .actualPay {
    font-size: 15rpx;
    background: rgba(0, 0, 0, 0.1);
    height: 32rpx;
    border-radius: 16rpx;
    text-align: center;
    line-height: 35rpx;
    padding: 0 10rpx;
    z-index: 2;
}

.downBox .downBoxListBox .couponItem .couponItemLeft  text {
    font-size: 50rpx;
    color: #fdfdff;
    margin-right: 5rpx;
    z-index: 2;
}

.downBox .downBoxListBox .couponItem .couponItemRight {
    flex: 1;
    position: relative;
    width: calc(100% - 1.9rem);
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 20rpx;
    color: #333;
    border-top-right-radius: 12rpx;
    border-bottom-right-radius: 12rpx;
    overflow: hidden;
    background-color: #f9f9f9;
}

.downBox .downBoxListBox .couponItem .couponItemRight .top {
    width: 400rpx;
    /*margin-top: .28rem;*/
    vertical-align: middle;
    font-size: 26rpx;
    line-height: 40rpx;
}

.downBox .downBoxListBox .couponItem .couponItemRight .top .cashvoucherimg {
    float: left;
    width: 122rpx;
    height: 35rpx;
    margin-right: 10rpx;
}

.downBox .downBoxListBox .couponItem .couponItemRight .useTypeImg {
    position: absolute;
    width: 82rpx;
    height: 72rpx;
    bottom: -8rpx;
    right: -8rpx;
}

.downBox .downBoxListBox .couponItem .couponItemRight .dot {
    position: absolute;
    top: 40%;
    right: 30rpx;
    display: inline-block;
    width: 34rpx;
    height: 34rpx;
    border: 1px solid #ddd;
    border-radius: 17rpx;
}

.downBox .downBoxListBox .couponItem .couponItemRight .active {
    position: absolute;
    top: 40%;
    right: 25rpx;
    display: inline-block;
}

.downBox .meCourseNodata {
    font-size: 34rpx;
    color: #999;
    margin-top: 40rpx;
    text-align: center;
}

/* ---- 顶部下拉框 -------------------------------------------------- */
