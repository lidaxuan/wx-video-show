.cord {
    display: flex;
    justify-content: center;
    padding: 0rpx 30rpx;
    margin-top: 20rpx;
}

.iv-cord {
    height: 276rpx;
    position: relative;
    border-radius: 32rpx;
    width: 100%;
}

.v-cord {
    position: absolute;
    top: 0;
    left: 40rpx;
    display: flex;
    flex-direction: column;
}

.tv-balance {
    margin-top: 48rpx;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.5);
}

.tv-money {
    font-size: 70rpx;
    color: #fff;
}

.tv-nonsupport {
    margin-top: 24rpx;
    font-size: 26rpx;
    color: rgba(255, 255, 255, 0.5);
}

.v-middle {
    width: 100%;
    position: relative;
    display: flex;
    justify-content: space-around;
    height: 160rpx;
}

.middle-line {
    position: absolute;
    top: 40rpx;
    left: 50%;
    width: 2rpx;
    height: 80rpx;
    background-color: #eee;
}

.v-share {
    width: 50%;
    height: 160rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.tv-peoplenum {
    font-size: 44rpx;
    color: #333;
}

.tv-peopletip {
    font-size: 24rpx;
    color: #999;
}

.list-item {
    display: flex;
    justify-content: space-between;
    padding: 30rpx;
    position: relative;
}

.list-left {
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.list-right {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: flex-end;
}

.list-line {
    position: absolute;
    background-color: #eee;
    height: 1rpx;
    bottom: 1rpx;
    left: 30rpx;
    width: 690rpx;
}

.list-name {
    font-size: 26rpx;
    color: #333;
    max-width: 482rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    align-content: center;
    margin-bottom: 4rpx;
}

.list-academy {
    font-size: 28rpx;
    color: #333;
    max-width: 482rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    align-content: center;
    margin-bottom: 4rpx;
}

.list-time {
    font-size: 22rpx;
    color: #666;
    max-width: 482rpx;
}

.list-money {
    font-size: 40rpx;
    color: #555;
}

.list-tip {
    font-size: 24rpx;
    color: #ec4a54;
}

.empty {
    width: 100%;
    height: 400rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    flex-direction: column;
}

.empty-image {
    width: 200rpx;
    height: 200rpx;
}

.empty-text {
    font-size: 28rpx;
    margin-top: 30rpx;
    color: #ddd;
}
