page {
    height: 100%;
}

.header {
    z-index: 999;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
}

.login-box {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    box-sizing: border-box;
}

.inner {
    padding: 182rpx 120rpx 0;
}

.box {
    position: relative;
    display: flex;
    height: 92rpx;
    margin-bottom: 56rpx;
    line-height: 92rpx;
    font-size: 30rpx;
    color: #666;
}

.box::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    border: 1px solid #e0e0e0;
    transform: scaleY(0.5);
}

.l {
    flex: none;
    width: 140rpx;
}

input {
    flex: auto;
    height: 100%;
    color: #333;
}

.r {
    white-space: nowrap;
}

.btn-clear {
    width: 60rpx;
    background: url(data:image/png;base64,) no-repeat right center/24rpx 24rpx;
}

.btn-get-vcode {
    color: #4e525e;
}

.btn-login {
    height: 88rpx;
    margin-top: 120rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 34rpx;
    color: #fff;
    font-weight: bold;
    background-color: #ec4955;
    border-radius: 44rpx;
    transition: background-color 0.24s;
}

.btn-login.hover {
    background-color: #ca2733;
}

.other-box {
    margin-bottom: 80rpx;
    text-align: center;
}

.other-box .title {
    position: relative;
    font-size: 30rpx;
    color: #ccc;
}

.other-box .title text {
    position: relative;
    display: inline-block;
    padding: 0 40rpx;
    background-color: #fff;
}

.other-box .title::before {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 50%;
    border-bottom: 1px solid #e0e0e0;
    transform: scaleY(0.5);
}

.btn-wechat {
    display: inline-block;
    height: 80rpx;
    width: 80rpx;
    margin-top: 80rpx;
    background: url(data:image/png;base64,) no-repeat center center/60rpx 50rpx;
    border: none;
}

.btn-wechat::after {
    display: none;
}

.tip {
    margin-top: 120rpx;
    font-size: 28rpx;
    color: #999;
}

.tip text {
    color: #ec4955;
}
