.search {
    z-index: 9999;
    padding-bottom: 16rpx;
    background: linear-gradient(270deg, rgba(254, 115, 88, 1) 0%, rgba(235, 70, 84, 1) 100%);
}

.inner {
    display: flex;
    align-items: center;
}

.logo {
    height: 36rpx;
    width: 104rpx;
    margin: 0 24rpx;
}

.input {
    position: relative;
    height: 60rpx;
    width: 390rpx;
    padding: 0 34rpx 0 84rpx;
    box-sizing: border-box;
    line-height: 60rpx;
    font-size: 26rpx;
    color: #999;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    background-color: #fff;
    border-radius: 30rpx;
}

.input::before {
    content: '';
    position: absolute;
    left: 34rpx;
    top: 50%;
    transform: translateY(-50%);
    height: 32rpx;
    width: 34rpx;
    background-color: red;
    background: url(data:image/png;base64,) no-repeat center center/100% 100%;
    background-size: 100% 100%;
}
