/* pages/index/selectedCourse/selectedCourse.wxss */

.choiceness-view {
    height: 340rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 30rpx;
    position: relative;
}

.img-bg {
    height: 340rpx;
    width: 100%;
    position: absolute;
    left: 0;
    top: 0;
    border-radius: 10rpx;
    z-index: 1;
}

.img-shade {
    height: 340rpx;
    width: 100%;
    background: linear-gradient(180deg, rgba(70, 92, 118, 0) 0%, rgba(51, 51, 51, 1) 100%);
    position: absolute;
    border-radius: 10rpx;
    left: 0;
    top: 0;
    z-index: 2;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
}

.choiceness-left {
    width: auto;
    overflow: hidden;
    margin-bottom: 20rpx;
    max-width: 470rpx;
    margin-right: 30rpx;
}

.img-certificate {
    position: absolute;
    width: 114rpx;
    height: 42rpx;
    top: 20rpx;
    left: 30rpx;
}

.tv-lessonCon {
    font-size: 24rpx;
    color: #fff;
    margin-left: 30rpx;
}

.tv-title {
    font-size: 36rpx;
    color: #fff;
    line-height: 50rpx;
    display: -webkit-box;
    overflow: hidden;
    margin-left: 30rpx;
    text-overflow: ellipsis;
    word-break: break-all;
    margin-top: 4rpx;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.tv-teacher {
    font-size: 24rpx;
    color: #fff;
    margin-right: 30rpx;
    line-height: 34rpx;
    margin-left: 30rpx;
    overflow: hidden;
    margin-top: 8rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.choiceness-right {
    width: auto;
    height: 80rpx;
    overflow: hidden;
    min-width: 80rpx;
    margin-right: 30rpx;
    margin-bottom: 20rpx;
    display: flex;
    color: #fff;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 30px;
    padding: 0 20rpx;
}

.right-view {
    display: flex;
    align-items: baseline;
}

.tv-money-left {
    font-size: 32rpx;
    color: #fff;
}

.tv-money-right {
    font-size: 26rpx;
    color: #fff;
}

.choiceness-empty {
    height: 400rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    flex-direction: column;
}


.empty-image {
    width: 200rpx;
    height: 200rpx;
}

.empty-text {
    font-size: 28rpx;
    margin-top: 30rpx;
    color: #ddd;
}
