.course-list {
    display: flex;
    flex-wrap: wrap;
}

.item {
    width: 345rpx;
    padding: 0 0 20rpx 20rpx;
}

.img-box {
    position: relative;
    height: 210rpx;
    border-radius: 14rpx;
    overflow: hidden;
}

.img-box image {
    height: 100%;
    width: 100%;
}

.img-box .icon {
    position: absolute;
    left: 0;
    top: 0;
    height: 36rpx;
    padding: 0 10rpx;
    line-height: 36rpx;
    text-align: center;
    font-size: 18rpx;
    color: #fff;
    background-color: #ef4e55;
    border-bottom-right-radius: 18rpx;
}

.img-box .icon.type1 {
    background-color: rgba(17, 17, 17, 0.6);
}

.img-box .info {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 60rpx;
    padding: 0 10rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    line-height: 70rpx;
    font-size: 22rpx;
    color: #fff;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.4) 100%);
}

.desc {
    height: 80rpx;
    padding-top: 10rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
}
