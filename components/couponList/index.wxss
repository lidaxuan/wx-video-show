.item {
  display: flex;
  height: 200rpx;
  margin-bottom: 24rpx;
}

.item:last-child {
  margin-bottom: 0;
}

.l{
  flex: 0 0 190rpx;
  min-width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  text-align: center;
  color: #fff;
}
.l-light {
    background: url(data:image/png;base64,) no-repeat;
    background-size: 100% 100%;
}
.l-gray {
    background: url(data:image/png;base64,) no-repeat;background-size: 100% 100%;
}

.l .price {
  height: 32rpx;
  width: 90rpx;
  line-height: 32rpx;
  font-size: 18rpx;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
}

.l .value {
  font-size: 60rpx;
  font-weight: bold;
}

.l .value::after {
  content: '元';
  padding-left: 2rpx;
  font-size: 20rpx;
}

.l .tip {
  font-size: 20rpx;
}

.r {
  position: relative;
  flex: auto;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  background-color: #fff;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.r .name {
  position: relative;
  padding-right: 102rpx;
  font-size: 26rpx;
}

.r .timer-title {
  color: #eb4655;
}

.r .active::before {
  content: '现金抵用券';
  position: relative;
  top: -2px;
  display: inline-block;
  height: 32rpx;
  width: 122rpx;
  margin-right: 4rpx;
  line-height: 32rpx;
  text-align: center;
  color: #fff;
  font-size: 18rpx;
  background-color: #eb4655;
  border-radius: 16rpx;
}

.r .gray::before {
  content: '现金抵用券';
  position: relative;
  top: -2px;
  display: inline-block;
  height: 32rpx;
  width: 122rpx;
  margin-right: 4rpx;
  line-height: 32rpx;
  text-align: center;
  color: #fff;
  font-size: 18rpx;
  border-radius: 16rpx;
  background-color: #d2d2d2;
}

.r .date {
  font-size: 24rpx;
  color: #666;
}

.r .date text {
  display: block;
}

.r .btn-use {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  height: 50rpx;
  width: 132rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #eb4655;
}

.r .btn-use::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 200%;
  width: 200%;
  border: 1px solid #eb4655;
  border-radius: 50rpx;
  transform-origin: 0 0;
  transform: scale(0.5);
}

.r .rb-s-img {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 82rpx;
  height: 72rpx;
}

.r .rb-b-img {
  position: absolute;
  bottom: -10rpx;
  right: -10rpx;
  width: 122rpx;
  height: 112rpx;
  transform: rotate(-30deg);
}
